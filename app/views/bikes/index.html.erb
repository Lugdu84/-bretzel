      </div>
      <div class="card-trip-infos">
          <h3> <%= bike.name %> </h3>
          <p> <%= bike.description %> </p>
          <p class="card-trip-pricing"> <%= bike.price %> â‚¬</p>
      </div>
    </div>
    <% end %>
